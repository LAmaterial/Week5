<h1><%= @project.name %></h1>

<h3><%= @project.description %></h3>

<h4> Project members -- Contact info </h4>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.first_name  %> <%= user.last_name %>. Email: <%= user.email %>
    </li>
  <% end %>
</ul>

<h4> Specific Tasks </h4>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.name  %> Assigned to: <%= task.user.first_name %> <%= task.user.last_name %>
    </li>
  <% end %>
</ul>
